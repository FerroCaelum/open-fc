// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Note {
  id         String   @id @default(uuid()) @db.Uuid
  text       String
  title      String
  lastUpdate DateTime @updatedAt
  created    DateTime @default(now())
}

model GameEntity {
  id                  String           @id @default(uuid()) @db.Uuid
  name                String           @unique
  text                String
  tags                String[]
  lastUpdate          DateTime         @updatedAt
  created             DateTime         @default(now())
  gameEntityLinksFrom GameEntityLink[] @relation("gameEntityLinksFrom")
  gameEntityLinksTo   GameEntityLink[] @relation("gameEntityLinksTo")
}

model GameEntityLink {
  id          String     @id @default(uuid()) @db.Uuid
  from        GameEntity @relation("gameEntityLinksFrom", fields: [fromId], references: [id])
  fromId      String     @db.Uuid
  to          GameEntity @relation("gameEntityLinksTo", fields: [toId], references: [id])
  toId        String     @db.Uuid
  description String
  created     DateTime   @default(now())
}
